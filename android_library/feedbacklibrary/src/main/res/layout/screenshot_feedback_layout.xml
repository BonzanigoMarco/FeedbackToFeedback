<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.matthias.feedbacklibrary.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="0.75">
            <!-- Layout height is fixed at the moment (later: relative to the screen size?) -->

            <ImageView
                android:id="@+id/supersede_feedbacklibrary_screenshot_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/camera_picture_big" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/supersede_feedbacklibrary_select_screenshot_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="36dp"
                android:minWidth="88dp"
                android:text="@string/supersede_feedbacklibrary_screenshotbutton_text"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/supersede_feedbacklibrary_annotate_screenshot_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="36dp"
                android:minWidth="88dp"
                android:text="@string/supersede_feedbacklibrary_annotatebutton_text"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/supersede_feedbacklibrary_remove_screenshot_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="36dp"
                android:minWidth="88dp"
                android:text="@string/supersede_feedbacklibrary_removebutton_text"
                android:textAllCaps="false"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

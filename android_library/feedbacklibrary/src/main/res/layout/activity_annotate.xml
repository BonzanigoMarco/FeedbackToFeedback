<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthias.feedbacklibrary.AnnotateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/supersede_feedbacklibrary_annotate_picture_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginStart="-2dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/supersede_feedbacklibrary_color_picker_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:height="36dp"
                android:minWidth="88dp"
                android:text="@string/supersede_feedbacklibrary_colorpickerbutton_text"
                android:textSize="13sp" />

            <Button
                android:id="@+id/supersede_feedbacklibrary_blur_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:height="36dp"
                android:minWidth="88dp"
                android:text="@string/supersede_feedbacklibrary_blurbutton_text"
                android:textSize="13sp" />

            <Button
                android:id="@+id/supersede_feedbacklibrary_black_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:height="36dp"
                android:minWidth="88dp"
                android:text="@string/supersede_feedbacklibrary_blackbutton_text"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
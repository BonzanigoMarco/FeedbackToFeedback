<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.matthias.hostapplication.StartActivity"
    tools:showIn="@layout/activity_start">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/host_application_screen_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/trigger_random_pull_config_v1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/random_pull_feedback_button_text"/>

        <Button
            android:id="@+id/trigger_specific_pull_config_v1_id11_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/specific_pull_feedback_button_text_id11"/>

        <Button
            android:id="@+id/trigger_specific_pull_config_v1_id12_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/specific_pull_feedback_button_text_id12"/>
    </LinearLayout>
</LinearLayout>

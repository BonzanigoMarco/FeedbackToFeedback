{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser/**",
    "typings/main/**",
    "tools/*.ts",
    "tools/**/*.ts",
    "app/**/*.e2e.ts",
    "app/**/*.spec.ts",
    "app/**/**/*.e2e.ts",
    "app/**/**/*.spec.ts"
  ],
  "compileOnSave": true
}

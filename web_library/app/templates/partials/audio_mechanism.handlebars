{{#if active}}
    <script src="http://lab.subinsb.com/projects/jquery/voice/jquery.voice.js"></script>
    <script src="{{distPath}}audio/recorder.js"></script>
    <script src="{{distPath}}audio/app.js"></script>
    <section id="audioMechanism{{ id }}" class="feedback-mechanism horizontal audio-type">
        <p>{{ title }}</p>
        <audio controls src="" id="audio"></audio>
        <div class="audio-buttons">
            <a id="record"><img src="{{distPath}}img/ic_mic_none_black_24dp_2x.png" data-default-src="{{distPath}}img/ic_mic_none_black_24dp_2x.png" data-active-src="{{distPath}}img/ic_mic_black_24dp_2x.png" /></a>
            <a class="disabled one" id="pause" title="pause"><img src="{{distPath}}img/ic_pause_circle_outline_black_24dp_2x.png" data-default-src="{{distPath}}img/ic_pause_circle_outline_black_24dp_2x.png" data-active-src="{{distPath}}img/ic_pause_circle_filled_black_24dp_2x.png" /></a>
            <a class="disabled one" id="stop" title="reset"><img src="{{distPath}}img/ic_delete_black_24dp_2x.png" /></a>
            <a class="disabled one" id="play" title="play"><img src="{{distPath}}img/ic_play_arrow_black_24dp_2x.png" /></a>
        </div>
    </section>
{{/if}}
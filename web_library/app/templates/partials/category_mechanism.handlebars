{{#if active}}
    <section id="categoryMechanism{{ id }}" class="feedback-mechanism {{parent.labelPositioning}} category-type validate-category"
        {{#if mandatory }} data-mandatory="1" data-mandatory-manual-text="{{ mandatoryReminder }}" {{/if}}>
        <p style="{{#if mandatory}}{{ parent.mandatoryLabelStyle }}{{/if}}">{{ title }}{{#if mandatory }} {{ parent.mandatorySign }}{{/if}}</p>
        {{#each options}}
            <input type="{{ ../inputType }}" id="option{{ key }}" data-parameter-id="{{id}}" name="category_mechanism_{{ ../id }}"
                   value="{{ key }}">
            <label for="option{{ key }}"> {{ value }}</label> &nbsp;
            {{#if ../breakAfterOption}}
                <br/>
            {{/if}}
        {{/each}}
        {{#if ownAllowed}}
            <label for="ownInput1">{{ ownLabel }}</label>
            <input class="own-category" id="ownInput1" type="text" />
        {{/if}}
    </section>
{{/if}}
